{
  "manifest_version": 3,
  "name": "LinkedIn Post Filter",
  "version": "1.0.0",
  "description": "AI-powered LinkedIn feed filter that learns from your preferences",
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": ["https://www.linkedin.com/*", "https://api.anthropic.com/*"],
  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/*"],
      "js": ["src/content.js"],
      "css": ["src/content.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_title": "LinkedIn Post Filter"
  },
  "options_page": "src/options/options.html"
}
